{
    "express": {
        "view cache": false,
        "view engine": "dust",
        "views": "path:./public/templates"
    },
    "view engines": {
        "dust": {
            "module": "makara",
            "renderer": {
                "method": "dust",
                "arguments": [
                    { "cache": true, "helpers": "config:dust.helpers" }
                ]
            }
        }
    },
    "dust": {
        "helpers": [
            "dust-makara-helpers",
            "pulvus-provide"
        ]
    },
    "i18n": {
        "contentPath": "path:./locales",
        "fallback": "en-US"
    },

    "specialization": {
    },
    "middleware": {
        "makara": {
            "priority": 100,
            "enabled": true,
            "module": {
                "name": "makara",
                "arguments": [
                    {
                        "i18n": "config:i18n",
                        "specialization": "config:specialization"
                    }
                ]
            }
        },
        "locale": {
            "priority": 118,
            "enabled": true,
            "module": "path:./lib/locale"
        },
        "makaraAMDify": {
            "priority": 119,
            "enabled": true,
            "module": {
                "name": "makara-amdify",
                "method": "middleware"
            }
        },

        "static": {
            "module": {
                "arguments": [ "path:./.build" ]
            }
        },

        "router": {
            "module": {
                "arguments": [{ "directory": "path:./controllers" }]
            }
        }

    }
}
